{
    "name": "jakobbuis/bolknoms2",
    "description": "Bolknoms: the very best application in the world for feeding your members in an organized and predictable way.",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Jakob Buis",
            "email": "jakob@jakobbuis.nl",
            "homepage": "http://www.jakobbuis.nl",
            "role": "lead developer"
        }
    ],
    "require": {
        "laravel/framework": "~5.2.0",
        "guzzlehttp/guzzle": "~6.0.0",
        "doctrine/dbal": "~2.5.1",
        "raven/raven": "^0.13.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "laravel/homestead": "^2.1",
        "fzaninotto/faker": "~1.5.0",
        "barryvdh/laravel-debugbar": "^2.0",
        "symfony/dom-crawler": "~3.0",
        "symfony/css-selector": "~3.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
